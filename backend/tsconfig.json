{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "..",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "types": ["node", "express"],
  "include": ["./src", "../frontend/src/types"]
}
